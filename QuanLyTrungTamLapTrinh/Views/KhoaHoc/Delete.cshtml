@model QuanLyTrungTamLapTrinh.Models.KhoaHoc

@{
    ViewData["Title"] = "Delete";
}
<div class="container mx-auto">
    <br />
    <h4 class="text-2xl font-bold ext-left TieuDe">XÓA THÔNG TIN KHÓA HỌC</h4>
    <hr><br>
    <form asp-action="Delete" class="grid grid-cols-2 gap-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TenKhoaHoc">Tên khóa học</label>
            <input type="text" class="form-control" asp-for="TenKhoaHoc" disabled>
            <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HocPhi">Học phí </label>
            <input asp-for="HocPhi" type="number" class="form-control" disabled>
            <span asp-validation-for="HocPhi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MoTa">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="3" disabled></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GhiChu">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3" disabled></textarea>
        </div>
        <div class="form-group">
            <label asp-for="TinhTrang">Tình trạng </label>
            <select asp-for="TinhTrang" class="form-control select2bs4" style="width: 100%;" disabled>
                <option selected="selected">- Chưa chọn -</option>
                <option>Đang mở</option>
                <option>Ngừng đào tạo</option>
                <option>Tạm ngừng</option>
                <option>Chờ phê duyệt</option>
            </select>
        </div>
        
        <div class="form-group">
            &nbsp;
        </div>
        <div class="form-group">
            &nbsp;
        </div>
        <div class="flex justify-end">
            <button type="submit" value="Delete" class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">&nbsp;&nbsp;&nbsp; Xóa &nbsp;&nbsp;&nbsp;</button>
        </div>
    </form>
    <br />

</div>
