@model QuanLyTrungTamLapTrinh.Models.HocVien

@{
    ViewData["Title"] = "Create";
}

<div class="container mx-auto">
    <br />
    <h1 class="text-2xl font-bold mb-4 text-left">THÊM MỚI HỌC VIÊN</h1>
    <hr><br>
    <form asp-action="Create" class="grid grid-cols-2 gap-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="HoTen">Họ tên</label>
            <input type="text" class="form-control" asp-for="HoTen">
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NgaySinh">Ngày sinh:</label>
            <div class="input-group date">
                <input asp-for="NgaySinh" class="form-control datetimepicker-input" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SoDT">Số điện thoại</label>
            <input asp-for="SoDT" type="number" class="form-control">
            <span asp-validation-for="SoDT" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SoCCCD">Số Căn cước công dân</label>
            <input asp-for="SoCCCD" type="number" class="form-control">
            <span asp-validation-for="SoCCCD" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GioiTinh">Giới tính</label>
            <select asp-for="GioiTinh" class="form-control select2bs4" style="width: 100%;">
                <option selected="selected">- Chọn -</option>
                <option>Nam</option>
                <option>Nữ</option>
            </select>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DiaChi">Địa chỉ</label>
            <textarea asp-for="DiaChi" class="form-control" rows="3"></textarea>
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GhiChu">Ghi chú</label>
            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="TinhTrang">Tình trạng</label>
            <select asp-for="TinhTrang" class="form-control select2bs4" style="width: 100%;">
                <option selected="selected">- Chọn -</option>
                <option>Đăng ký mới</option>
                <option>Đang học</option>
                <option>Bảo lưu</option>
                <option>Đã nghỉ học</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="HinhAnh">Hình ảnh</label>
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" asp-for="HinhAnh" accept="image/png, image/jpeg, image/gif">
                    <label class="custom-file-label" for="exampleInputFile"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            &nbsp;
        </div>
        <div class="flex justify-end">
            <button type="submit" value="Create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Thêm mới</button>
        </div>
    </form>
    <br />

</div>

