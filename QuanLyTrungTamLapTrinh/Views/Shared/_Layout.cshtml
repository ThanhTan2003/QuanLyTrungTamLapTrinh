<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quản lý trung tâm IT Education</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/AdminTE/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/AdminTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/AdminTE/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminTE/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminTE/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    @* <link rel="stylesheet" href="~/AdminTE/plugins/daterangepicker/daterangepicker.css"> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminTE/plugins/summernote/summernote-bs4.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/fontawesome.min.css">

    @* <!-- DataTables -->
    <link rel="stylesheet" href="~/AdminTE/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminTE/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminTE/plugins/datatables-buttons/css/buttons.bootstrap4.min.css"> *@


</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/AdminTE/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/AdminTE/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">IT Education</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/AdminTE/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image" style="height: 60px; width: auto">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block"><b style="font-size: 22PX">THANH TÂN</b><br />Quản lý</a>
                    </div>
                </div>



                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <br />
                        <li class="nav-item menu-open">
                            <a href="#" class="nav-link active" style="font-size: 17px">
                                @* <i class="nav-icon fas fa-tachometer-alt"></i> *@
                                <i class="fa-solid fa-house"></i>
                                <p>
                                    &nbsp;&nbsp; Trang chủ
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="GiaoVien" asp-action="Index" class="nav-link" style="font-size: 17px">
                                @* <i class="nav-icon fas fa-tachometer-alt"></i> *@
                                <i class="fa-solid fa-chalkboard-user"></i>
                                <p>
                                    &nbsp;&nbsp;Giáo viên
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="HocVien" asp-area="" asp-action="Index" class="nav-link" style="font-size: 17px">
                                @* <i class="nav-icon fas fa-tachometer-alt"></i> *@
                                <i class="fa-solid fa-graduation-cap"></i>
                                <p>
                                    &nbsp;&nbsp;Học viên
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="CoSoVatChat" asp-action="Index" class="nav-link" style="font-size: 17px">
                                @* <i class="nav-icon fas fa-tachometer-alt"></i> *@
                                <i class="fa-solid fa-desktop"></i>
                                <p>
                                    &nbsp;&nbsp;Thiết bị
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="CoSoVatChat" asp-action="Index" class="nav-link" style="font-size: 17px">
                                @* <i class="nav-icon fas fa-tachometer-alt"></i> *@
                                <i class="fa-solid fa-people-roof"></i>
                                <p>
                                    &nbsp;&nbsp;Phòng học
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="KhoaHoc" asp-action="Index" class="nav-link" style="font-size: 17px">
                                @* <i class="nav-icon fas fa-tachometer-alt"></i> *@
                                <i class="fa-sharp fa-regular fa-calendar-days"></i>
                                <p>
                                    &nbsp;&nbsp;Khóa học
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="LichkhaiGiang" asp-action="Index" class="nav-link" style="font-size: 17px">
                                @* <i class="nav-icon fas fa-tachometer-alt"></i> *@
                                <i class="fa-solid fa-clipboard-list"></i>
                                <p>
                                    &nbsp;&nbsp;Lịch khai giảng
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="KhoaHoc" asp-action="Index" class="nav-link" style="font-size: 17px">
                                @* <i class="nav-icon fas fa-tachometer-alt"></i> *@
                                <i class="fa-regular fa-user"></i>
                                <p>
                                    &nbsp;&nbsp;Quản trị tài khoản
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="background-color: white">
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid" style="background-color: white">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                    <!-- Small boxes (Stat box) -->


                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>


        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/AdminTE/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/AdminTE/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="~/AdminTE/plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="~/AdminTE/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="~/AdminTE/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/AdminTE/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/AdminTE/plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/AdminTE/plugins/moment/moment.min.js"></script>
    <script src="~/AdminTE/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/AdminTE/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/AdminTE/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/AdminTE/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminTE/dist/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
    @* <script src="~/AdminTE/dist/js/demo.js"></script> *@
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/AdminTE/dist/js/pages/dashboard.js"></script>


</body>
</html>
















